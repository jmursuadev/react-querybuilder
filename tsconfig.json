{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "target": "es2015",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@ui": [
        "src/components/ui/index"
      ],
      "@ui/*": [
        "./src/components/ui/*"
      ],
      "@test-utils": [
        "./src/lib/utils/testing/utils"
      ],
      "@test-utils/*": [
        "./src/lib/utils/testing/*"
      ],
      "@types/*": [
        "./src/types/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "jest.config.js",
    "./src/lib/**/*.ts",
    "./src/lib/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
